<div class="accordion-wrapper">
  <h3 class="accordion-title">{{ section.settings.accordion_title }}</h3>
  {% for block in section.blocks %}
    {% if block.type == 'accordion' %}
      {% for item in block.settings.accordion_items %}
        <div class="accordion-item">
          <input type="checkbox" class="accordion-checkbox" id="accordion-item-{{ forloop.index }}">
          <label for="accordion-item-{{ forloop.index }}" class="accordion-label">{{ item.accordion_item_title }}</label>
          <div class="accordion-content-wrapper">
            <div class="accordion-column">
              {{ item.accordion_item_column_1 }}
            </div>
            <div class="accordion-column">
              {{ item.accordion_item_column_2 }}
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  {% endfor %}
</div>
{% stylesheet %}
 .accordion-wrapper {
  background-color: #f4f4f4;
  padding: 20px;
  border-radius: 5px;
}

.accordion-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.accordion-item {
  margin-bottom: 10px;
}

.accordion-label {
  display: block;
  font-size: 18px;
  font-weight: bold;
  cursor: pointer;
}

.accordion-content-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.accordion-checkbox:checked + .accordion-label + .accordion-content-wrapper {
  display: flex;
}

.accordion-column {
  flex-basis: calc(50% - 10px);
  margin-right: 20px;
  padding: 10px;
  background-color: white;
  border-radius: 5px;
}

.accordion-column:last-of-type {
  margin-right: 0;
}

{% endstylesheet %}

