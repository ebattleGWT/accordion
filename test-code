<div class="accordion-wrapper">
  <h3 class="accordion-title">{{ section.settings.accordion_title }}</h3>
  {% for block in section.blocks %}
    {% if block.type == 'accordion' %}
      <div class="accordion-item">
        <input type="checkbox" class="accordion-checkbox" id="accordion-item-{{ block.id }}-{{ forloop.index }}">
        <label for="accordion-item-{{ forloop.index }}" class="accordion-label">{{ block.settings.accordion_item_title }}</label>
        <div class="accordion-content-wrapper hide">
          <div class="accordion-column">
            {{ block.settings.accordion_item_column_1 }}
          </div>
          <div class="accordion-column">
            {{ block.settings.accordion_item_column_2 }}
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
<script>
<script>
  const accordionItems = document.querySelectorAll('.accordion-item');

  accordionItems.forEach(item => {
    const accordionTitle = item.querySelector('.accordion-label');
    const accordionContent = item.querySelector('.accordion-content-wrapper');

    accordionTitle.addEventListener('click', event => {
      const isActive = item.classList.contains('active');

      accordionItems.forEach(otherItem => {
        otherItem.classList.remove('active');
        otherItem.querySelector('.accordion-content-wrapper').classList.add('hide');
        otherItem.querySelector('.accordion-label').innerHTML = '+';
      });

      if (!isActive) {
        item.classList.add('active');
        accordionContent.classList.remove('hide');
        accordionTitle.innerHTML = '-';
      }
    });
  });
</script>

</script>
<style>
  .accordion-label.active:before {
  content: '-';
}

.accordion-label:before {
  content: '+';
  margin-right: 5px;
}
.accordion-item input[type=checkbox]{
  display:none !important;
}
  .accordion-wrapper {
  background-color: #f4f4f4;
  padding: 20px;
  border-radius: 5px;
}

.accordion-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.accordion-item {
  margin-bottom: 10px;
}

.accordion-label {
  display: block;
  font-size: 18px;
  font-weight: bold;
  cursor: pointer;
}
 .hide{
  display:none;
}
.accordion-content-wrapper .active{
  display: flex;
  flex-wrap: wrap;
}

.accordion-checkbox:checked + .accordion-label + .accordion-content-wrapper {
  display: flex;
}

.accordion-column {
  flex-basis: calc(50% - 10px);
  margin-right: 20px;
  padding: 10px;
  background-color: white;
  border-radius: 5px;
}

.accordion-column:last-of-type {
  margin-right: 0;
}

</style>

